{
  "name": "LyricTube Chrome Extension",
  "version": "1.0",
  "description": "Lyrics for Youtube music v√≠deos!",
  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["<all_urls>"],
      "js": ["jQuery.js", "script.js"]
    }
  ],
  "browser_action": {
    "default_popup": "index.html"
  },
  "manifest_version": 2
}
